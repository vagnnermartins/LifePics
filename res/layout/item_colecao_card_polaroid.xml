<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="7dp" >

    <ImageView
        android:id="@+id/item_colecao_card_polaroid_polaroid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:src="@drawable/polaroid" />

    <ImageView
        android:id="@+id/item_colecao_card_polaroid_imagem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/no_card" />

    <TextView
        android:id="@+id/item_colecao_card_polaroid_titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_colecao_card_polaroid_polaroid1"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="Sonh" />
    
</RelativeLayout>